.container .container-main {
  padding-bottom: 112rpx;
}
.container .container-main .main-tips {
  position: -webkit-sticky;
  position: sticky;
  z-index: 99;
  padding: 12rpx 32rpx;
  height: 72rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FFF;
}
.container .container-main .main-tips .tips-bg {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1;
  background: var(--theme-color);
  opacity: 0.1;
}
.container .container-main .main-tips .tips-status {
  color: var(--theme-color);
  font-size: 24rpx;
  line-height: 34rpx;
}
.container .container-main .main-tips .tips-time {
  color: #8D929C;
  font-size: 24rpx;
  line-height: 34rpx;
}
.container .container-main .main-info {
  background: #FFF;
  padding: 32rpx;
}
.container .container-main .main-info .info-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}
.container .container-main .main-info .info-box {
  margin-left: 32rpx;
}
.container .container-main .main-info .info-box .name {
  color: #5A5B6E;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 40rpx;
}
.container .container-main .main-info .info-box .level {
  margin-top: 16rpx;
  color: #8D929C;
  font-size: 28rpx;
  line-height: 40rpx;
}
.container .container-main .main-field .field-custom {
  margin-top: 32rpx;
  background: #FFF;
  padding: 32rpx;
}
.container .container-main .main-field .field-custom .custom-title {
  color: #5A5B6E;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 44rpx;
}
.container .container-main .main-item {
  margin-top: 32rpx;
  background: #FFF;
  padding: 32rpx;
}
.container .container-main .main-item .item-title {
  color: #5A5B6E;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 40rpx;
}
.container .container-main .main-item .item-image {
  width: 100%;
  margin-top: 24rpx;
}
.container .container-main .main-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 12rpx 32rpx;
  background: #FFF;
}
.container .container-main .main-footer .footer-btn .btn-box {
  border-radius: 16rpx;
  padding: 24rpx;
  width: calc(50% - 8rpx);
}
.container .container-main .main-footer .footer-btn .btn-box .icon {
  width: 32rpx;
  height: 32rpx;
}
.container .container-main .main-footer .footer-btn .btn-box .text {
  margin-left: 16rpx;
  color: #5A5B6E;
  font-size: 28rpx;
  line-height: 40rpx;
}
