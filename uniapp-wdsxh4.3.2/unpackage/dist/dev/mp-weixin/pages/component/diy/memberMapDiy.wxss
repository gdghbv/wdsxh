.diy-member-map {
  position: relative;
  overflow: hidden;
}
.diy-member-map.flex-column {
  display: flex;
  flex-direction: column;
}
.diy-member-map .map-context {
  width: 100%;
  height: 100%;
  flex: 1;
  overflow: hidden;
}
.diy-member-map .map-context .map {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.diy-member-map .map-context .callout-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  border-radius: 16rpx;
  background: #FFF;
}
.diy-member-map .map-context .callout-item .item-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  object-fit: cover;
  margin-right: 8rpx;
}
.diy-member-map .map-context .callout-item .item-name {
  color: #5A5B6E;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40rpx;
}
.diy-member-map .map-classify {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.diy-member-map .map-classify .classify-list {
  height: 100%;
}
.diy-member-map .map-classify .classify-list .list-item {
  line-height: 1.4;
