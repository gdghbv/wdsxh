.diy-menu {
  display: flex;
  flex-wrap: wrap;
}
.diy-menu .menu-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 8rpx;
}
.diy-menu .menu-item .item-image {
  position: relative;
}
.diy-menu .menu-item .item-image .image {
  width: 100%;
  height: 100%;
}
.diy-menu .menu-item .item-image .count {
  position: absolute;
  top: -12rpx;
  right: -16rpx;
  color: #FFF;
  text-align: center;
  font-size: 20rpx;
  line-height: 28rpx;
  padding: 0 8rpx;
  min-width: 28rpx;
  background: #FF4646;
  border-radius: 28rpx;
}
.diy-menu .menu-item .item-text {
  width: 100%;
  line-height: 1.4;
  font-size: 28rpx;
  text-align: center;
}
.diy-menu .menu-item .item-count {
  display: none;
}
.diy-menu .menu-item .item-icon {
  display: none;
}
.diy-menu.vertical-layout {
  flex-direction: column;
  padding: 0 16px;
}
.diy-menu.vertical-layout .menu-item {
  flex-direction: row;
  width: 100% !important;
  padding: 0;
}
.diy-menu.vertical-layout .menu-item .item-image .count {
  display: none;
}
.diy-menu.vertical-layout .menu-item .item-text {
  flex: 1;
  text-align: left;
}
.diy-menu.vertical-layout .menu-item .item-count {
  display: block;
  color: #FFF;
  text-align: center;
  font-size: 20rpx;
  line-height: 28rpx;
  padding: 0 8rpx;
  min-width: 28rpx;
  background: #FF4646;
  border-radius: 28rpx;
  margin-left: 16rpx;
}
.diy-menu.vertical-layout .menu-item .item-icon {
  display: block;
  margin-left: 16rpx;
}
