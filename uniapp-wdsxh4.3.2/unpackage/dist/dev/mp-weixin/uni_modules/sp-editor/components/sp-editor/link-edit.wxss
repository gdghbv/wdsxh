.link-edit-container .link-edit {
  width: 80%;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  background-color: #ffffff;
  box-shadow: -2px -2px 4px rgba(0, 0, 0, 0.05), 2px 2px 4px rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
  box-sizing: border-box;
  z-index: 999;
  font-size: 14px;
}
.link-edit-container .link-edit .title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.link-edit-container .link-edit .edit {
  padding: 24rpx;
  border-top: 1px solid #eeeeee;
  border-bottom: 1px solid #eeeeee;
  box-sizing: border-box;
}
.link-edit-container .link-edit .edit .input {
  flex: 1;
  padding: 4px;
  font-size: 14px;
  border: 1px solid #eeeeee;
  border-radius: 8rpx;
}
.link-edit-container .link-edit .edit .input .uni-input-placeholder {
  color: #dddddd;
}
.link-edit-container .link-edit .edit .description {
  display: flex;
  align-items: center;
}
.link-edit-container .link-edit .edit .address {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
}
.link-edit-container .link-edit .control {
  height: 80rpx;
  display: flex;
  cursor: pointer;
}
.link-edit-container .link-edit .control .cancel {
  flex: 1;
  color: #dd524d;
  display: flex;
  justify-content: center;
  align-items: center;
}
.link-edit-container .link-edit .control .confirm {
  border-left: 1px solid #eeeeee;
  flex: 1;
  color: #007aff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.link-edit-container .mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.05);
  z-index: 998;
}
